<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WelcomeFragment">


    <ImageView
        android:id="@+id/question_pic"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="@dimen/large_dimens"
        android:src="@drawable/welcome_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        style="@style/welcomeStyle"
        android:background="@drawable/ripple_animation_button"
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xxl_dimens"
        android:padding="@dimen/large_dimens"
        android:text="@string/button_welcome_text"
        app:layout_constraintEnd_toEndOf="@+id/question_pic"
        app:layout_constraintStart_toStartOf="@+id/question_pic"
        app:layout_constraintTop_toBottomOf="@+id/question_pic" />


</androidx.constraintlayout.widget.ConstraintLayout>

